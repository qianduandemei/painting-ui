{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "declaration": true, 
      "outDir": "./dist/esm",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["."],
    "exclude": ["dist", "node_modules", "**/*.spec.ts"]
  }
  